<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="plugin" group="installer" method="upgrade">
	<name>plg_installer_override</name>
	<author>Joomla! Project</author>
	<creationDate>June 2018</creationDate>
	<copyright>Copyright (C) 2005 - 2018 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>4.0.0</version>
	<description>PLG_INSTALLER_OVERRIDE_PLUGIN_XML_DESCRIPTION</description>
	<files>
		<filename plugin="override">override.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_installer_override.ini</language>
		<language tag="en-GB">en-GB.plg_installer_override.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="numupdate"
					type="list"
					label="PLG_INSTALLER_OVERRIDE_PLUGIN_FIELD_NUMUPDATE"
					filter="integer"
					default="3"
					required="true"
					>
					<option value="3">3</option>
					<option value="5">5</option>
					<option value="10">10</option>
					<option value="15">12</option>
				</field>

				<field
					name="overridefiles"
					type="hidden"
					label="PLG_INSTALLER_OVERRIDE_PLUGIN_FIELD_OVERRIDEFILES_LABEL"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
